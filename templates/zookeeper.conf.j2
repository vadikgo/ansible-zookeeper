description "ZooKeeper"

limit nofile 32768 32768

start on runlevel [2345]
stop on [!12345]

respawn
respawn limit 2 5

umask 007

kill timeout 300

script
    su -c "{{zookeeper_dir}}/bin/zkServer.sh start-foreground > /var/log/zookeeper/init-zookeeper.log" zookeeper
end script

post-stop script
    pid=$(ps ax|grep zookeeper-{{zookeeper_version}}|grep java|awk '{print $1}')
    [ -n $pid ] && kill $pid
end script
